@model projectSchedule1.Models.ProjectTask

@{
    ViewData["Title"] = "EditTaskDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>EditTaskDetails</h2>

<form asp-action="EditTaskDetails" method="post">
    <div class="form-horizontal">
        <h4>ProjectTask</h4>
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="TaskId" />
        <div class="form-group">
            <label asp-for="ProjectId" class="control-label col-md-2">ProjectId</label>
            <div class="col-md-10">
                <input asp-for="ProjectId" class="form-control" value="@ViewBag.projectId" readonly />
                <span asp-validation-for="ProjectId" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="StatusId" class="control-label col-md-2">StatusId</label>
            <div class="col-md-10">
                <select asp-for="StatusId" class="form-control" asp-items="@ViewBag.statusItems" ></select>
                <span asp-validation-for="StatusId" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TaskDesc" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="TaskDesc" class="form-control"  />
                <span asp-validation-for="TaskDesc" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TaskEndDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="TaskEndDate" class="form-control date-picker" type="text" />
                <span asp-validation-for="TaskEndDate" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TaskStartDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="TaskStartDate" class="form-control date-picker" type="text" />
                <span asp-validation-for="TaskStartDate" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <button class="btn btn-primary btn-md" onclick="window.history.back()">Back</button>
</div>

@section Scripts {

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
