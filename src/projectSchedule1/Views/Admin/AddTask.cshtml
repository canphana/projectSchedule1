@model projectSchedule1.Models.ProjectTask

@{
    ViewData["Title"] = "AddTask";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>AddTask</h2>

<form asp-action="AddTask" method="post">
    <div class="form-horizontal">
        <h4>Task</h4>
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ProjectId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ProjectId" value="@ViewBag.projectId" class ="form-control" readonly />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="StatusId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="StatusId" class ="form-control" asp-items="@ViewBag.statusItems"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TaskDesc" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="TaskDesc" class="form-control" />
                <span asp-validation-for="TaskDesc" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TaskEndDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="TaskEndDate" class="form-control date-picker" type="text" />
                <span asp-validation-for="TaskEndDate" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TaskStartDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="TaskStartDate" class="form-control date-picker" type="text"/>
                <span asp-validation-for="TaskStartDate" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back</a>
</div>

@section Scripts {
   
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
