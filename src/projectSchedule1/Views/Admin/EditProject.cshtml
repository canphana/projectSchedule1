@model projectSchedule1.Models.Project

@{
    ViewData["Title"] = "EditProject";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>EditProject</h2>

<form asp-action="EditProject" method="post">
    <div class="form-horizontal">
        <h4>Project</h4>
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ProjectId" />
        <div class="form-group">
            <label asp-for="ClientId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="ClientId" class="form-control" asp-items ="@ViewBag.clientItems" ></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ProjectDesc" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="ProjectDesc" class="form-control" ></textarea>
                <span asp-validation-for="ProjectDesc" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="ProjectEndDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ProjectEndDate" class="form-control date-picker" type="text" />
                <span asp-validation-for="ProjectEndDate" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ProjectName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ProjectName" class="form-control" />
                <span asp-validation-for="ProjectName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ProjectStartDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ProjectStartDate" class="form-control date-picker" type="text" />
                <span asp-validation-for="ProjectStartDate" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="StatusId" class="control-label col-md-2">Status</label>
            <div class="col-md-10">
                <select asp-for="StatusId" class="form-control" asp-items="@ViewBag.statusItems"></select>
                <span asp-validation-for="StatusId" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Project">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
