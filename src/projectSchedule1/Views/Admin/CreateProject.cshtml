@model projectSchedule1.Models.Project

@{
    ViewData["Title"] = "CreateProject";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>CreateProject</h2>

<form asp-action="CreateProject">
    <div class="form-horizontal">
        <h4>Project</h4>
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ClientId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="ClientId" class ="form-control" asp-items="@ViewBag.clientItems"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ProjectDesc" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ProjectDesc" class="form-control" />
                <span asp-validation-for="ProjectDesc" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ProjectEndDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ProjectEndDate" class="form-control" />
                <span asp-validation-for="ProjectEndDate" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ProjectName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ProjectName" class="form-control" />
                <span asp-validation-for="ProjectName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ProjectStartDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ProjectStartDate" class="form-control" />
                <span asp-validation-for="ProjectStartDate" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="StatusId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="StatusId" class ="form-control" asp-items="@ViewBag.statusItems"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
