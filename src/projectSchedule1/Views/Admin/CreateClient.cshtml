@model projectSchedule1.Models.Client

@{
    ViewData["Title"] = "CreateClient";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>CreateClient</h2>

<form asp-action="CreateClient">
    <div class="form-horizontal">
        <h4>Client</h4>
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ClientAddress" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ClientAddress" class="form-control" />
                <span asp-validation-for="ClientAddress" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ClientEmail" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ClientEmail" class="form-control" />
                <span asp-validation-for="ClientEmail" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ClientName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ClientName" class="form-control" />
                <span asp-validation-for="ClientName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ClientPhoneNo" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ClientPhoneNo" class="form-control" />
                <span asp-validation-for="ClientPhoneNo" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
