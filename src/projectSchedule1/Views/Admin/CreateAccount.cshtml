@model projectSchedule1.Models.LoginAccount

@{
    ViewData["Title"] = "CreateAccount";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>CreateAccount</h2>

<form asp-action="CreateAccount">
    <div class="form-horizontal">
        <h4>LoginAccount</h4>
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="AccountTypeId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="AccountTypeId" class ="form-control" asp-items="@ViewBag.accountType"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="EmployeeId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="EmployeeId" class="form-control" asp-items="@ViewBag.employee"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="LoginAccountName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="LoginAccountName" class="form-control" />
                <span asp-validation-for="LoginAccountName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="LoginAccountPassword" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="LoginAccountPassword" class="form-control" type="password"/>
                <span asp-validation-for="LoginAccountPassword" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
